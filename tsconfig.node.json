{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // ✅ must be false (or removed)
    "composite": true, // ✅ must stay true for project references

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "allowSyntheticDefaultImports": true,
    "outDir": "./dist" // ✅ optional, tells TS where to place emit output
  },
  "include": ["vite.config.ts"]
}
